<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/loading_bg"
   >

    <ImageView
        android:id="@+id/loading_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76.666666dp"
        android:background="@drawable/loading_logo" />
    <ImageView
        android:id="@+id/loading_text"
        android:layout_below="@id/loading_logo"
        android:scaleType="fitXY"
        android:layout_marginTop="63.333333dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/loading_text"/>
    <TextView
        android:id="@+id/copy_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="23.333333dp"
        android:text="@string/copyright"
        android:textColor="@color/baiyanse"
        android:textSize="10.666666sp" />
    <TextView
        android:id="@+id/website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/copy_right"
        android:layout_centerHorizontal="true"
        android:paddingTop="15dp"
        android:text="@string/fclub_website"
        android:textColor="@color/baiyanse"
        android:textSize="9.333333sp" />











</RelativeLayout>
